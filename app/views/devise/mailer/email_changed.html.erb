<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <p class="lead">Hello <%= @email %>!</p>

      <% if @resource.try(:unconfirmed_email?) %>
        <p class="mb-4">We're contacting you to notify you that your email is being changed to <%= @resource.unconfirmed_email %>.</p>
      <% else %>
        <p class="mb-4">We're contacting you to notify you that your email has been changed to <%= @resource.email %>.</p>
      <% end %>
    </div>
  </div>
</div>
