<h1>Edit Post</h1>

<%= form_tag post_path(@post['id']), method: :patch do %>
  <div class="form-group">
    <%= label_tag :title, 'Title' %>
    <%= text_field_tag 'title', @post['title'], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :body, 'Body' %>
    <%= text_area_tag 'body', @post['body'], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= label_tag :userId, 'User ID' %>
    <%= number_field_tag 'userId', @post['userId'], class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= submit_tag 'Update Post', class: 'btn btn-primary' %>
  </div>
<% end %>
